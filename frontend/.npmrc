# Install packages faster and more efficiently
prefer-offline=true
audit=false
fund=false
engine-strict=true

# Use faster registry
registry=https://registry.npmjs.org/

# Reduce installation time
fetch-retries=3
fetch-retry-mintimeout=10000
fetch-retry-maxtimeout=60000

# Allow optional dependencies for cross-platform builds
optional=true

# Use deterministic installs
save-exact=true
